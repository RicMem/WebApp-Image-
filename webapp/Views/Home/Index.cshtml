@{
    ViewData["Title"] = "Home Page";
}


<!DOCTYPE html>

<style>
    body {
        background-image: url('https://i.makeagif.com/media/9-14-2021/3XxbIh.gif');
        background-repeat: no-repeat;
        background-attachment: fixed;
